<table>
  <thead>
    <tr>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @category_reps.each do |category_rep| %>
      <tr>
        <td><%= category_rep.category %></td>
        <td><%= link_to 'Show', category_rep %></td>
