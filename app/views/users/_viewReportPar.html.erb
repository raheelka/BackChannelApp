<table id="viewReportTable" class="viewReportClass" border=1>
  <tr><th>Category</th><th>Tag</th><th>Title</th> <th>Content</th> <th>Posted By </th><th>Votes Received</th><th>All who voted</th><th>Comments Received</th><th>All who commented</th> <th>Post Weight</th></tr>
  <% @posts.each do |poster| %>
      <tr>
        <td><%= poster.category %></td>
        <td><%= poster.tag %></td>
        <td><%= poster.title%></td>
        <td><%=poster.content %></td>
        <td><%=poster.user.first_name %> <%=poster.user.last_name %></td>
        <td><%=number_of_votes_for_post(poster)  %></td>
        <td><%=all_who_voted(poster)  %></td>
        <td><%=number_of_comments_for_post(poster)  %></td>
        <td><%=all_who_commented(poster)  %></td>

        <td><%=poster.weight  %></td>
      </tr>
  <% end %>
</table>